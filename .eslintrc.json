{
    "env": {
        "es2021": true
    },
    "globals":{
      "__DEV__": "readonly"
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "eslint-plugin-import-helpers",
        "prettier"

    ],
    "rules": {
      "prettier/prettier": "error",
      "import-helpers/order-imports": [
        "warn",
        {
          "groups": [
            "/^react$/",
            "module",
            "/^assets/",
            "/^components/",
            "/^contexts/",
            "/^env/",
            "/^helpers/",
            "/^hooks/",
            "/^routes/",
            "/^screens/",
            "/^services/",
            "/^theme/",
            "/^types/",
            [
              "parent",
              "sibling",
              "index"
            ]
          ],
          "alphabetize": {
            "order": "asc",
            "ignoreCase": true
          }
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/jsx-filename-extension": [
	    1,
	  {
	  "extensions": [
		".tsx"
	]
	}
],
"no-use-before-define": "off",
"@typescript-eslint/no-use-before-define": [
	"error"
],
"react/react-in-jsx-scope": "off",
"import/extensions": [
  "error",
  "ignorePackages",
  {
    "ts": "never",
    "tsx": "never"
  }
]
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
}
